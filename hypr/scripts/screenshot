#!/usr/bin/env bash

mkdir -p ~/Pictures/Screenshots
filename=~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png

if [[ $1 == rc ]]; then
    grim -g "$(slurp -d)" - | wl-copy
    notify-send 'Screenshot copied to clipboard'
elif [[ $1 == ri ]]; then
    grim -g "$(slurp -d)" - | swappy -f -
elif [[ $1 == sc ]]; then
    grim - | wl-copy
    notify-send 'Screenshot copied to clipboard'
elif [[ $1 == si ]]; then
    grim - | swappy -f -
fi
